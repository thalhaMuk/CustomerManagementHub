@{
    ViewData["Title"] = "User Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .body-container {
            text-align: center;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        h1 {
            margin-top: 0;
            color: #333;
        }

        p {
            color: #555;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin: 8px 0;
        }

        a {
            text-decoration: none;
            color: #007bff;
            transition: color 0.3s;
        }

            a:hover {
                color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="body-container">
        <h1>Hi!!</h1>
        <p>Here are the available endpoints:</p>
        <ul>
            <li><a href="~/api/v1.0/customer">View Customer Data</a></li>
            <li><a href="~/api/v1.0/customer/edit/{customerId}">Edit Customer</a></li>
            <li><a href="~/api/v1.0/customer/getdistance?customerId={customerId}&latitude={latitude}&longitude={longitude}">Calculate Distance</a></li>
            <li><a href="~/api/v1.0/customer/search?searchText={searchText}">Search Customers</a></li>
            <li><a href="~/api/v1.0/customer/groupedbyzipcode">Customers Grouped by Zip Code</a></li>
        </ul>
    </div>
</body>
</html>
